<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Connection"
        android:id="@+id/buttonConnection"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="connectF"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Messages"
        android:id="@+id/buttonMessages"
        android:layout_below="@+id/buttonConnection"
        android:layout_centerHorizontal="true"
        android:onClick="messageF"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Configuration"
        android:id="@+id/buttonConfiguration"
        android:layout_below="@+id/buttonMessages"
        android:layout_centerHorizontal="true"
        android:onClick="configurationF"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Bands"
        android:id="@+id/buttonTraining"
        android:layout_below="@+id/buttonConfiguration"
        android:layout_centerHorizontal="true"
        android:onClick="bandsF"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="VFO"
        android:id="@+id/buttonHandbook"
        android:layout_below="@+id/buttonTraining"
        android:layout_centerHorizontal="true"
        android:onClick="vfoF"/>
</RelativeLayout>